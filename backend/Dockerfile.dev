# Development Dockerfile with hot reload support

FROM maven:3.9-eclipse-temurin-21-alpine
WORKDIR /app

# Copy pom.xml and download dependencies
COPY pom.xml .
RUN mvn test-compile -B || true

# Copy source code
COPY src ./src

# Expose application port and debug port
EXPOSE 8080 5005

# Run with Spring Boot DevTools
CMD ["mvn", "spring-boot:run", "-DskipTests", "-Dspring-boot.run.jvmArguments=-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005"]